<s:SparkButtonSkin xmlns:fx="http://ns.adobe.com/mxml/2009" 
             xmlns:s="library://ns.adobe.com/flex/spark" 
             xmlns:fb="http://ns.adobe.com/flashbuilder/2009"
             minWidth="25"
             alpha.disabled="0.5">
     
    <fx:Metadata>
        <![CDATA[ 
        /** 
         * @copy spark.skins.spark.ApplicationSkin#hostComponent
         */
        [HostComponent("spark.components.Button")]
        ]]>
    </fx:Metadata>
    
    <!-- states -->
    <s:states>
        <s:State name="up" />
        <s:State name="over" />
        <s:State name="down" />
        <s:State name="disabled" />
    </s:states>
    
	<s:Rect left="0" right="0" top="0" bottom="0" radiusX="4" radiusY="4">
		<s:fill>
			<s:SolidColor color="0x2da4e8" />
		</s:fill>
	</s:Rect>
	
	<s:Label id="labelDisplay" left="26" right="4" top="2" bottom="2" color="0xFFFFFF" fontSize="10"
			 maxDisplayedLines="1" textAlign="right" verticalAlign="middle" verticalCenter="1" />
    
</s:SparkButtonSkin>
