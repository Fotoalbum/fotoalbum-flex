<?xml version="1.0" encoding="utf-8"?>
<s:SparkButtonSkin xmlns:fx="http://ns.adobe.com/mxml/2009" 
             xmlns:s="library://ns.adobe.com/flex/spark" 
             xmlns:fb="http://ns.adobe.com/flashbuilder/2009"
             minWidth="25" minHeight="30" 
             alpha.disabled="0.5">
     
    <fx:Metadata>
        <![CDATA[ 
        /** 
         * @copy spark.skins.spark.ApplicationSkin#hostComponent
         */
        [HostComponent("spark.components.Button")]
        ]]>
    </fx:Metadata>
    
    <!-- states -->
    <s:states>
        <s:State name="up" />
        <s:State name="over" />
        <s:State name="down" />
        <s:State name="disabled" />
    </s:states>
    
	<s:Rect left="0" right="0" top="0" bottom="0">
		<s:fill>
			<s:SolidColor color="0xffde17"
						  color.over="0xe27200"
						  color.down="0xe27200" />
		</s:fill>
	</s:Rect>
	
	<s:Label id="labelDisplay" left="8" right="10" color="0xFFFFFF"
			 maxDisplayedLines="1" textAlign="left" verticalAlign="middle"
			 verticalCenter="2"
			 color.up="#e27200" />
    
	<s:Image source="@Embed('assets/icons/shoppingcart.png')"
			 source.over="@Embed('assets/icons/shoppingcart_high.png')"
			 source.down="@Embed('assets/icons/shoppingcart_high.png')"
			 verticalCenter="0" right="10" />
	
</s:SparkButtonSkin>
