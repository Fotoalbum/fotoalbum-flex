<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009"
		xmlns:s="library://ns.adobe.com/flex/spark"
		xmlns:mx="library://ns.adobe.com/flex/mx"
		alpha.disabled=".5" width="180" 
		height="70">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("spark.components.BorderContainer")]
	</fx:Metadata>
	
	<!-- states -->
	<s:states>
		<s:State name="disabled" />
		<s:State name="normal" />
	</s:states>
	
	<!-- SkinParts
	name=contentGroup, type=spark.components.Group, required=false
	-->
	
	<s:Rect left="0" right="0" top="0" bottom="0">
		<s:fill>
			<s:SolidColor color="0xDCD9C9" alpha="1" />
		</s:fill>
	</s:Rect>
	
	<s:Image width="48" height="48" mouseEnabled="false" source="@Embed('assets/icons/instagram-icon.png')"
			 left="10" verticalCenter="0"/>
	
	<s:Label right="10" top="10" fontSize="16" mouseEnabled="false" text="Mijn Instagram" textAlign="right" />
	
	<s:Button right="10" bottom="10" width="24" height="24" skinClass="skins.MenuButtonToDetailSkin" />
	
</s:Skin>