<?xml version="1.0" encoding="utf-8"?>
<s:BorderContainer xmlns:fx="http://ns.adobe.com/mxml/2009"
				   xmlns:s="library://ns.adobe.com/flex/spark"
				   xmlns:mx="library://ns.adobe.com/flex/mx"
				   width="200" height="120"
				   backgroundColor="0xFFFFFF"
				   borderWeight="0" borderVisible="false" 
				   dropShadowVisible="false">
	<s:layout>
		<s:HorizontalLayout gap="-1" verticalAlign="middle" horizontalAlign="center" />
	</s:layout>
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<fx:Script>
		<![CDATA[
			
			[Bindable] public var totalWidth:Number;
			[Bindable] public var totalHeight:Number;
			[Bindable] public var singlepage:Boolean;
			[Bindable] public var data:Object;
			[Bindable] public var isCover:Boolean = false;
		]]>
	</fx:Script>
	
</s:BorderContainer>
